<%= form_with model: [ @post, @post.comments.build ] do |form| %>
    <p>
        <%= form.label current_user.username %><br>
        <%= form.hidden_field :commenter, :value => @user%>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
  </p>
    <p>
        <%= form.label :status %><br>
        <%= form.select :status, Visible::VALID_STATUSES, selected: 'public' %>
    </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>