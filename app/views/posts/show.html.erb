<div class="container ms-5">
          <div class="d-flex justify-content-center">
          <div>
            <h1 class= "pt-5"><%= @post.title %></h1>
            <strong>Owner:&nbsp;</strong><%= @user%>
          </div>
          <p><%= @post.body %></p>
        </div>
        <div class="d-flex justify-content-center">
          <% if user_signed_in?%> 
            <ul>
              <li><%= link_to "Edit", edit_post_path(@post) %></li>
              <li><%= link_to "Delete", post_path(@post), data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure?"
                } %></li>
            </ul>
          <%end%>
        </div>
    
        <h2 class="d-flex justify-content-center">Comments</h2>
        <div class="d-flex justify-content-center ">
          <div>
            <%= render @post.comments %>
          </div>
        </div>
        <% if user_signed_in?%>
          <div>
            <h2 class="d-flex justify-content-center">Add comment: </h2>
            <div class= "d-flex justify-content-center">
              <%= render 'comments/form'%>
            </div>
          </div>
        <%end%>
</div>
