<div class="container text-center">    
    <div class="row">
        <ul> 
            <%@posts.each do |post|%>
                <% unless post.archived?%>
                    <%= link_to post do%>
                    <div class="border">
                        <br>
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="well">
                                    
                                    <div class="col-sm-9">
                                        <div class="well">
                                            <div>
                                               
                                            </div>
                                        </div>
                                    </div>
                                    <%= User.find(post.user_id).username%>
                                    <%= image_tag "blank-profile.png", size:'55x55', class:"img-circle" %>   
                                </div>
                            </div>
                            <%=post.body%>
                            <%@posts.each%>
                        </div>
                        Total Comments: <%=@Comments%>
                    </div>                     
                    <%end%>
                <%end%>
                <br>
            <%end%>
        </ul>
    </div>
</div>