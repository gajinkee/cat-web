<div class="container text-center">    
    <div class="row">
        <ul> 
            <%@posts.each do |post|%>
                <% unless post.archived?%>
                    <br>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="well">
                                <p>Username</p>
                                <div class="col-sm-9">
                                    <div class="well">
                                        <div>
                                            <%= link_to post.title, post%>
                                        </div>
                                    </div>
                                </div>
                                <%= image_tag "blank-profile.png", size:'55x55', class:"img-circle" %>   
                            </div>
                        </div>
                        <%=post.body%>
                        <%@posts.each%>
                        <%end%>
                    </div>
                <br>
            <%end%>
        </ul>
    </div>
</div>